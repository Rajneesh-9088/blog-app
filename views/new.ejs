<%- include("./partials/header") %>
   <%- include("./partials/navbar") %>

      <div class="container" style="margin-top: 5.5rem;">

         <form action="/blogs" method="POST">
            <div class="row">
               <div class="col-lg-2"></div>
               <div class="col-lg-8">
                  <h3>Write New Blog</h2>
                  <div class="mb-3">
                     <label for="title" class="form-label">Title</label>
                     <input class="form-control" type="text" name="title" placeholder="title" id="title">
                  </div>
                  <div class="mb-3">
                     <label for="img" class="form-label">Img Url</label>
                     <input class="form-control" type="text" name="img" placeholder="url" id="img">
                  </div>
                  <div class="mb-3">
                     <label for="body">Blog body</label>
                     <textarea class="form-control" name="body" id="body" cols="30" rows="5"></textarea>
                  </div>
               <button class="btn btn-outline btn-outline-dark">Submit</button>       
         </form>
      </div>
      <div class="col-lg-2"></div>
      </div>
      </div>






